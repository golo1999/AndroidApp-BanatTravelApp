<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.banat_travel_app.StartingPart.Fragment.LoginFragment">

    <LinearLayout
        android:id="@+id/forgotPasswordCenterLayout"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".9">

        <EditText
            android:id="@+id/forgotPasswordNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:background="@drawable/button_with_blue_border"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="10sp"
            android:drawableTint="@color/secondary_color"
            android:hint="New password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:padding="10sp"
            android:textColor="@color/secondary_color"
            android:textColorHint="@color/secondary_color"
            android:textCursorDrawable="@color/secondary_color"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/forgotPasswordConfirmNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp"
            android:background="@drawable/button_with_blue_border"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="10sp"
            android:drawableTint="@color/secondary_color"
            android:hint="Confirm password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:padding="10sp"
            android:textColor="@color/secondary_color"
            android:textColorHint="@color/secondary_color"
            android:textCursorDrawable="@color/secondary_color"
            android:textSize="18sp" />

        <Button
            android:id="@+id/forgotPasswordResetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp"
            android:background="@drawable/button_with_blue_border"
            android:text="Reset"
            android:textAlignment="center"
            android:textColor="@color/secondary_color"
            android:textSize="18sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/forgotPasswordLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:text="Login here"
                android:textAlignment="center"
                android:textColor="@color/secondary_color"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/forgotPasswordRegister"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/forgotPasswordRegister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:text="Register here"
                android:textAlignment="center"
                android:textColor="@color/secondary_color"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/forgotPasswordLogin"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>