<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow_blue_gradient"
    tools:context="com.example.banat_travel_app.ActivityPresentation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/location_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/location_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/location_details_layout"
            app:layout_constraintRight_toRightOf="@+id/location_details_layout"
            app:layout_constraintTop_toTopOf="@+id/location_details_layout" />

        <TextView
            android:id="@+id/location_details_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@+id/location_details_layout"
            app:layout_constraintRight_toRightOf="@+id/location_details_layout"
            app:layout_constraintTop_toBottomOf="@+id/location_details_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>