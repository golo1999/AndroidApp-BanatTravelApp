<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/cardDesign"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardLayout"
            android:background="@drawable/yellow_gradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cardImage"
                android:scaleType="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="@+id/cardLayout"
                app:layout_constraintRight_toRightOf="@+id/cardLayout"
                app:layout_constraintTop_toBottomOf="@+id/cardTitle"
                app:layout_constraintBottom_toBottomOf="@+id/cardLayout"/>

            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="@+id/cardLayout"
                app:layout_constraintRight_toRightOf="@+id/cardLayout"
                app:layout_constraintLeft_toLeftOf="@+id/cardLayout"
                android:layout_marginTop="5dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>